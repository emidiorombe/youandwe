<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml"></include>
	<package name="struts" namespace="/struts" extends="struts-default">
		<action name="login">
			<result>/pages/login.jsp</result>
		</action>
		
		<action name="home" method="login" class="br.com.yaw.struts2.action.LoginAction">
			<result>/pages/home.jsp</result>
			<result name="input">/pages/login.jsp</result>
		</action>
		
		<action name="list" method="listAll" class="br.com.yaw.struts2.action.ListAction">
			<result>/pages/list.jsp</result>
			<result name="error">/pages/list.jsp</result>
		</action>
		
		<action name="addUser">
			<result>/pages/addUser.jsp</result>
		</action>
		
		<action name="add" method="addUser" class="br.com.yaw.struts2.action.UserAction">
			<result>/pages/addUser.jsp</result>
			<result name="error">/pages/addUser.jsp</result>
		</action>
		
		<action name="editUser" method="editUser" class="br.com.yaw.struts2.action.UserAction">
			<result>/pages/editUser.jsp</result>
			<result name="error">/pages/editUser.jsp</result>
		</action>
		
		<action name="update" method="updateUser" class="br.com.yaw.struts2.action.UserAction">
			<result name="success" type="redirect">
				/struts/list
			</result>
			<result name="error">/pages/editUser.jsp</result>
		</action>
		
		<action name="remove" method="removeUser" class="br.com.yaw.struts2.action.UserAction">
			<result name="success" type="redirect">
				/struts/list
			</result>
			<result name="error">/pages/list.jsp</result>
		</action>
		
		<action name="upFile">
			<result>/pages/upload.jsp</result>
		</action>
		<action name="upload" method="upload" class="br.com.yaw.struts2.action.UserAction" >
			<result>/pages/upload.jsp</result>
		</action>
	</package>
</struts>