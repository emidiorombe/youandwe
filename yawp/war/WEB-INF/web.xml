<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<filter>
		<filter-name>gae_downtime</filter-name>
		<filter-class>br.com.yaw.servlet.filter.GAEDownTimeFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>gae_downtime</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>br.com.yaw.servlet.listener.GeneralContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>company</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.CompanyActionServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>comment</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.CommentActionServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.UserActionServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>async</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.AsyncServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>blob</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.BlobServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.ImageServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>geral</servlet-name>
		<servlet-class>br.com.yaw.servlet.action.GeneralActionServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoteApi</servlet-name>
		<servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RemoteApi</servlet-name>
		<url-pattern>/remote_api</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>company</servlet-name>
		<url-pattern>/company/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>comment</servlet-name>
		<url-pattern>/comment/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>async</servlet-name>
		<url-pattern>/async/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>blob</servlet-name>
		<url-pattern>/blob/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>geral</servlet-name>
		<url-pattern>/geral/*</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/pages/404.jsp</location>
	</error-page>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
