<?xml version="1.0" encoding="UTF-8"?>
<web-app id="Promove" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>promove</display-name>
	<context-param>
		<param-name>destinatarios_mail</param-name>
		<param-value>daniel@newti.com.br;</param-value>
	</context-param>
	
	<context-param>
		<param-name>productionMode</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>pasta_avaria_xml</param-name>
		<param-value>C:\importacao\</param-value>
	</context-param>
	
	<context-param>
		<param-name>pasta_destino_xml</param-name>
		<param-value>C:\dados\avarias\</param-value>
	</context-param>
	
	<context-param>
		<param-name>tmp_dir</param-name>
		<param-value>C:\tmp\</param-value>
	</context-param>
	
	<context-param>
		<param-name>pasta_fotos</param-name>
		<param-value>C:\dados\fotos\</param-value>
	</context-param>
	
	<context-param>
		<param-name>ctrc_ws_url</param-name>
		<param-value>http://200.102.250.27:8088/ctrcws/ws/ctrc/por-data</param-value>
	</context-param>
	
	<context-param>
		<param-name>ctrc_job</param-name>
		<param-value>0 0 0 ? * *</param-value>
	</context-param>
	
	<context-param>
		<param-name>mail_scheduler</param-name>
		<param-value>0 0 23 ? * *</param-value>
	</context-param>
	
	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/ws</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
	</listener>
	
	<listener>
		<listener-class>br.com.promove.servlet.listener.GeneralContextListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>Promove</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>br.com.promove.application.PromoveApplication</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Promove</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>export</servlet-name>
		<servlet-class>br.com.promove.servlet.ExportacaoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>export</servlet-name>
		<url-pattern>/export</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>import</servlet-name>
		<servlet-class>br.com.promove.servlet.ImportacaoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>import</servlet-name>
		<url-pattern>/import</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>transaction</filter-name>
		<filter-class>br.com.promove.servlet.filter.TransactionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>transaction</filter-name>
		<servlet-name>Promove</servlet-name>
	</filter-mapping>
	
	<welcome-file-list>
		<welcome-file>index.xhtml</welcome-file>
	</welcome-file-list>
</web-app>
